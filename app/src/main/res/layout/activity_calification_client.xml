<?xml version="1.0" encoding="utf-8"?>
  <androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="activities.driver.CalificationClientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation= "vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/journey_finished"
          android:textAlignment="center"
          android:textSize= "22sp"
          android:textColor= "@android:color/black"
          android:layout_marginTop="20dp"
          />


      <com.airbnb.lottie.LottieAnimationView
          android:layout_width="100dp"
          android:layout_height="100dp"
          app:lottie_imageAssetsFolder="assets"
          app:lottie_fileName="23232-check-mark.json"
          app:lottie_autoPlay="true"
          app:lottie_loop="false"
          android:layout_gravity="center"
          android:layout_marginTop="30dp"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/from"
          android:textAlignment="center"
          android:textSize= "22sp"
          android:textColor= "@android:color/black"
          android:layout_marginTop="20dp"
          />

      <TextView
          android:id="@+id/textViewOriginCalification"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/false_cr_false_avenue"
          android:textAlignment="center"
          android:textSize= "17sp"
          android:layout_marginTop="5dp"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/until"
          android:textAlignment="center"
          android:textSize= "22sp"
          android:textColor= "@android:color/black"
          android:layout_marginTop="20dp"
          />

      <TextView
          android:id="@+id/textViewDestinationCalification"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/false_cr_false_avenue"
          android:textAlignment="center"
          android:textSize= "17sp"
          android:layout_marginTop="5dp"
          />


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="Price"
          android:textAlignment="center"
          android:textColor="@android:color/black"
          android:textSize="22sp" />

      <TextView
          android:id="@+id/tv_price_c"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:text="@string/false_cr_false_avenue"
          android:textAlignment="center"
          android:textStyle="bold"
          android:textColor="@color/quantum_black_100"
          android:textSize="22sp" />
      <RatingBar
          android:id="@+id/ratingbarCalification"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="30dp"/>


    </LinearLayout>
    <Button
        android:id="@+id/btnCalification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_button"
        android:text="@string/qualify_client"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:layout_margin="20dp" />



  </androidx.coordinatorlayout.widget.CoordinatorLayout   >
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorAccent">

    <TextView
        android:id="@+id/cart_textView4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cart_image_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cart_textView4"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/user_male" />

    <TextView
        android:id="@+id/cart_itemNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxWidth="140dp"
        android:maxHeight="70dp"
        android:text="NameNameNameNameNameNameNameNameName"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/cart_image_item"
        app:layout_constraintEnd_toStartOf="@+id/cart_btnMinus"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toEndOf="@+id/cart_image_item"
        app:layout_constraintTop_toTopOf="@+id/cart_image_item"
        app:layout_constraintVertical_bias="0.733" />

    <TextView
        android:id="@+id/cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="2.5"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/cart_btnMinus"
        app:layout_constraintEnd_toEndOf="@+id/cart_btnPlus"
        app:layout_constraintStart_toStartOf="@+id/cart_btnMinus"
        app:layout_constraintTop_toBottomOf="@+id/cart_textView4"
        app:layout_constraintVertical_bias="0.303" />

    <Button
        android:id="@+id/cart_btnPlus"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorAccent"
        android:text="+"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cart_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="0"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/cart_btnPlus"
        app:layout_constraintEnd_toStartOf="@+id/cart_btnPlus"
        app:layout_constraintTop_toTopOf="@+id/cart_btnPlus" />

    <Button
        android:id="@+id/cart_btnMinus"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorAccent"
        android:text="-"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/cart_textView3"
        app:layout_constraintEnd_toStartOf="@+id/cart_textView3"
        app:layout_constraintTop_toTopOf="@+id/cart_textView3" />
</androidx.constraintlayout.widget.ConstraintLayout>